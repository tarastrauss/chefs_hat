<h1 class = "font page-head"> <%= current_user.username %>'s Profile </h1>
<div id = "edit">
<% if flash[:notice] %>
  <p><%= flash[:notice] %> </p>
<% end %>


<%= form_for @user, html: {multipart: true} do |f| %>
  <div class="field">
    <%= f.label :first_name %>
    <%= f.text_field :first_name, class: "form-control form-custom right" %>
  </div>
  </br>
  <div class="field">
    <%= f.label :last_name %>
    <%= f.text_field :last_name, class: "form-control form-custom right" %>
  </div>
  </br>
  <div class="field">
    <%= f.label :username %>
    <%= f.text_field :username, class: "form-control form-custom right" %>
  </div>
  </br>
  <div class="field">
    <%= f.label :email %>
    <%= f.text_field :email, class: "form-control form-custom right" %>
  </div>
  </br>
  <div class="field">
    <%= f.label :password %>
    <%= f.password_field :password, class: "form-control form-custom right" %>
  </div>
  </br>
  <div class="field">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, class: "form-control form-custom right" %>
  </div>
  </br>
  <div class="field form-group">
    <%= f.label :change_image %>
    </br>
    <%= f.file_field :image%>
  </div>
  <div class="actions"><%= f.submit class: "btn btn-default grey right" %></div>
<% end %>
</div>


