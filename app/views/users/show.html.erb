<h1> My Hats </h1>
<%= link_to 'New Hat', new_hat_path %>

<% @hats.each do |hat| %>

  <tr>

    <td><%= hat.name %></td>
    <% if current_user == @user %>
      <td><%= link_to 'Show', hat %></td>
      <td><%= link_to 'Delete', hat, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    <% end %>
  </tr>
<% end %>
