<h1>Create a New Hat!</h1>
<%= form_for @hat do |f| %>
  <% if @hat.errors.any? %>
    <div class="error_messages">
      <h2>Form is invalid</h2>
      <ul>
        <% for message in @hat.errors.full_messages %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.hidden_field :user_id, :value => current_user.id %>
  </div>

  <div class="actions"><%= f.submit %></div>
<% end %>
