<h1>Welcome to Chef's Hat!</h1>
<h3> The best place on the web for sharing recipes!</h3>


<h4>Login or </h4> <%= link_to 'Sign Up', new_user_path %>
<p id="alert"><%= alert %></p>
<%= form_tag sessions_path do %>
  <div class="field">
    <%= label_tag :email %>
    <%= text_field_tag :email, params[:email] %>
  </div>
  <div class="field">
    <%= label_tag :password %>
    <%= password_field_tag :password %>
  </div>
  <div class="actions"><%= submit_tag "Log in" %></div>
<% end %>

